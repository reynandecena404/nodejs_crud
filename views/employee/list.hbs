<h3>  
    Employee List
</h3>
<a href="/employee" class="btn btn-secondary btn-sm pull-right mb-3"><i class="fa fa-plus"></i> Create New</a>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">Email</th>
            <th scope="col">Mobile Number</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each list}}
                <tr>
                    <td>{{this.firstname}}</td>
                    <td>{{this.lastname}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.mobile}}</td>
                    <td>{{this.address}}</td>
                    <td>
                        <a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg text-warning" aria-hidden="true"></i></a>
                        <a href="/employee/delete/{{this._id}}" onclick="return confirm(' Are you sure you want to delete this record? ');"><i class="fa fa-trash fa-lg text-danger" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {{/each}}
            
        </tbody>
    </table>
</div>
